<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sp.shahezaddemo">

    <application
        android:name=".util.ShahezadApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ListViewActivity" />
        <activity android:name=".ViewPagerActivity" />
        <activity android:name=".BaseActivity"></activity>
        <activity android:name=".DialogueActivity"></activity>

        <activity
            android:name=".StandardModeActivity"
            android:label="@string/app_name"
            android:launchMode="standard"
            ></activity>

        <activity android:name=".SingleTaskActivity"
            android:launchMode="singleTask"
            ></activity>

        <activity android:name=".SingleTopActivity"
            android:launchMode="singleTop"
            ></activity>

        <activity android:name=".SingleInstanceActivity"
            android:launchMode="singleInstance"
            ></activity>

    </application>

</manifest>